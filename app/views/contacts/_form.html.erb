<div class="form">
  <h2>Contact Me</h2>
  <i class="fa-solid fa-xmark close" data-contact-target="closeBtn" data-action="click->contact#hideForm"></i>
  <%= form_for @contact do |f| %>
    <div class="field">
      <%= f.label :name %>
      <%= f.text_field :name %>
    </div>
    <div class="field">
      <%= f.label :email %>
      <%= f.email_field :email %>
    </div>
    <div class="field">
      <%= f.label :message %>
      <%= f.text_area :message %>
    </div>
    <div class="field">
      <%= f.submit "Send Message", class: "btn btn-green" %>
    </div>
  <% end %>
</div>
