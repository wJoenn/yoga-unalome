<!DOCTYPE html>
<html>
  <head>
    <title>YogaUnalome</title>
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= vite_stylesheet_tag "application.scss", "data-turbo-track": "reload" %>
    <%= vite_client_tag %>
    <%= vite_javascript_tag 'application' %>
  </head>

  <body data-controller="contact">
    <%= render 'shared/navbar' %>

    <%= link_to "new event", new_event_path if admin_user? %>
    <%= render "shared/flashes" %>

    <%= yield %>
    <div id="contact-popup" data-contact-target="popup">
      <%= render 'contacts/form' %>
    </div>
  </body>
</html>
