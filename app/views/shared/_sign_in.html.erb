<div id="modal" class="hidden" data-user-form-modal-target="modal" data-action="mousedown->user-form-modal#hideForm">
  <%= form_with model: User.new, scope: :user, url: session_path(:user), data: { turbo: false, user_form_modal_target: "form" } do |f| %>
    <h2>Welcome back</h2>

    <div class="field">
      <%= f.label :email %>
      <%= f.email_field :email, autocomplete: "email" %>
    </div>

    <div class="field">
      <%= f.label :password %>

      <div class="password" data-controller="toggle-hidden-password">
        <%= f.password_field :password, autocomplete: "current-password", data: { toggle_hidden_password_target: "input" } %>
        <i class="fa-solid fa-eye" data-action="click->toggle-hidden-password#togglePassword"></i>
      </div>
    </div>

    <div class="check">
      <%= f.check_box :remember_me %>
      <%= f.label :remember_me %>
    </div>

    <%= f.submit "Log in", class: "btn btn-green" %>
  <% end %>
</div>
