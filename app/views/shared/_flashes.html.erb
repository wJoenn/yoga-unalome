<% if notice %>
  <div class="flash notice invisible">
    <i class="fa-solid fa-xmark close"></i>
    <p class="notice"><%= notice %></p>
  </div>
<% end %>

<% if alert %>
  <div class="flash alert invisible">
    <i class="fa-solid fa-xmark close"></i>
    <p class="alert"><%= alert %></p>
  </div>
<% end %>
