<div class="booking">
  <i class="fa-solid fa-xmark close" data-action="click->booking-confirmation#closeBookingConfirmation"></i>

  <div>
    <div class="price">
      <h3><%= event.title %></h3>
      <h2><%= humanized_money_with_symbol event.price %></h2>
    </div>

    <%# <span><span>10â‚¬</span> with memberhsip</span> %>
  </div>

  <div class="date">
    <p><%= l(event.start_time, format: "%A %d %b") %></p>
    <p><%= "#{event.start_time.strftime("%I:%M")} - #{event.end_time.strftime("%I:%M")}" %></p>
  </div>

  <p><%= event.capacity - event.bookings.count %> <%= t("pages.home.planning.spots") %></p>

  <div class="buttons">
    <%= button_to t("pages.home.planning.book_now"), event_bookings_path(event.id), class: "btn btn-blue", data: { turbo: false } %>
    <%# <button class="btn-green">Become a member</button> %>
  </div>
</div>
